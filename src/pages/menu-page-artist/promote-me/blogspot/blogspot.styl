@import '../../../../assets/styles/vars'
@import '../../../../assets/styles/base'

a
  outline 0

.content-flex
  display flex

.content-row
  flex-direction row

.content-column
  flex-direction column

.vertical-center
  align-items center

.horizontal-center
  justify-content center

.separator
  width 85%
  margin 46px 0px

.text-base
  color: $blackColor
  font-family 'Lato'
  font-weight $regular
  
.text-description
  font-size 21px
  
.text-center
  text-align center

.width-100
  width 100%
  
.width-50
  width 50%
  
.margin-vertical-20-48px
  margin 20px 0px 48px 0px

.leads-payment-title
  font-size 25px
  margin 68px 0px 6px 0px
  
.subtitle
  font-size 20px
  
.text-gold
  color $dustColor

.payment-leads-circle
  background-color $dustColor
  border-radius 50px
  height 30px
  width 30px

.payment-leads-text-return
  color #595959
  font-size 13px
  text-transform uppercase
  margin 0px
  margin-left 10px

.payment-leads-arrow
  width 8px
  
.return-config
  align-self flex-start
  margin 63px 0px 46px 150px
  
.blogspot-post
  width 579px
  height 369px
  background-color #e9e9e9

@media screen and (max-width: 975px)
  .content-column-mobile
    flex-direction column
    
  .description
    font-size 16px
    
  .width-70
    width 70%
    
  .return-config
    align-self initial
    align-items center
    margin-left 0px
    
  .margin-bottom-40px-mobile
    margin-bottom 40px

  .leads-payment-title
    font-size 20px
    margin-bottom 0px
    margin-top 35px

  .separator
    margin 35px 0px