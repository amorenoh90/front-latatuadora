@import '../../../assets/styles/vars'
@import '../../../assets/styles/mixins'
@import '../../../assets/styles/base'

.flex-row
  display flex
  flex 1
  flex-direction row

.separator
  width 85%
  margin 46px 0px

.menu-page-content
  display flex
  width 100%
  align-items center
  flex-direction column

.menu-page-title
  color: #1d1c1c
  font-family 'Lato'
  font-size 25px
  font-weight $regular
  margin 68px 0px 6px 0px
  
.menu-page-subt
  color #c9c9c9
  font-family 'Lato'
  font-size 20px
  font-weight $regular
  margin 0px
  
.menu-page-description
  color: #b09c6c
  
.menu-page-tattoo
  display flex
  flex-direction row
  flex-wrap wrap
  justify-content center
  
@media screen and (max-width: 975px)
  .flex-row
    display flex
    flex 1
    flex-direction column
    
  .menu-page-content
    margin-bottom 63px
    
  .separator
    margin 35px 0px
    
  .menu-page-tattoo
    flex-direction column
    width: 100%
    
  .menu-page-title
    margin-bottom 0px
    margin-top 35px