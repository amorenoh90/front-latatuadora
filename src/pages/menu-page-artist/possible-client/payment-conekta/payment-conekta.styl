@import '../../../../assets/styles/vars'
@import '../../../../assets/styles/base'

.separator
  width 85%
  margin 46px 0px
  
.vertical-hr
  background-color #979797
  height 37px
  margin 0px 30px
  width 1px
 
.width-180px
 width 180px 
  
.margin-0px
  margin 0px
  
.margin-left-10px
  margin-left 10px
  
.margin-vertical-30px
  margin 30px 0px
  
.margin-horizontal-16px-14px
  margin 0px 16px 0px 14px
  
.margin-top-30px
  margin-top 30px
  
.conekta-text
  color #262626
  font-size 16px
  margin 0px

.conekta-input-base
  background-color #fff
  border solid 1px #e6e6e6
  height 47px
  
.input-large
  width 344px
  padding-left 10px
  
.input-medium
  width 111px
  
.input-small
  width 80px
  
.input-medium,
  .input-small
    text-align center
    
.button-golden
  color #fff
  background-color #b09c6c
  border none
  border-radius 2px
  font-family 'Lato'
  font-size 13px
  font-weight $regular
  height 48px
  outline 0 !important
  text-transform uppercase
  width 147px
  
.conekta-icon-lock
  position absolute
  right 0px
  top 50%
  transform translateY(-50%)
  color #e8e8e8
  right 12px

.payment-leads-quantity
    font-size 23px

.payment-leads-circle
  background-color #b09c6c
  border-radius 50px
  height 30px
  width 30px

.payment-leads-text-return
  color #595959
  font-size 13px
  text-transform uppercase
  margin 0px
  margin-left 10px

.payment-leads-arrow
  width 8px

.gray-separator
  border solid 1px #dedede
  width 45%
  margin 36px 0px 50px 0px
  
.return-config
  align-self flex-start
  margin 63px 0px 46px 150px

@media screen and (max-width: 975px)    
  .wdt-180px
    width initial
    
  .input-large,
    .input-medium,
      .input-small
        width 100%
    
  .absolute-left-0px-mobile
    left 0px
    
  .top-0px
    top 0px
    
  .gray-separator
    width 85%
    
  .return-config
    align-self initial
    align-items center
    margin-left 0px
    
  .margin-bottom-40px-mobile
    margin-bottom 40px
    
  .margin-horizontal-24px-mobile
    margin-left 24px
    margin-right 24px
    
  .margin-bottom-13px-mobile
    margin-bottom 13px
    
  .margin-left-0px-mobile
    margin-left 0px

  .payment-leads-quantity
      font-size 18px

  .separator
    margin 35px 0px

  .margin-vertical-35px-0px-mobile
    margin-bottom 0px
    margin-top 35px