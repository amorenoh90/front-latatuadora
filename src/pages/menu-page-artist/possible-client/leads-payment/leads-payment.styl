@import '../../../../assets/styles/vars'
@import '../../../../assets/styles/mixins'
@import '../../../../assets/styles/base'

a
  outline 0

.content-flex
  display flex

.content-row
  flex-direction row

.content-column
  flex-direction column

.vertical-center
  align-items center

.horizontal-center
  justify-content center

.content-relative
  position relative

.content-absolute
  position absolute
  left 0px
  bottom -45px

.hide-desktop
  display none

.separator
  width 85%
  margin 46px 0px

.text-base
  color: #1d1c1c
  font-family 'Lato'
  font-weight $regular

.width-100
  width 100%

.leads-payment-title  
  font-size 25px
  margin 68px 0px 6px 0px

.payment-leads-quantity,
  .payment-leads-select
    font-size 23px

.payment-leads-quantity
  margin 0px 0px 22px 0px

.payment-leads-total
  font-size 20px
  margin 0px

.payment-leads-gold
  color #b09c6c

.payment-leads-circle
  background-color #b09c6c
  border-radius 50px
  height 30px
  width 30px

.payment-leads-text-return
  color #595959
  font-size 13px
  text-transform uppercase
  margin 0px
  margin-left 10px

.payment-leads-arrow
  width 8px

.payment-leads-card
  border-radius 13px
  width 199px
  height 111px 
  background-color #f9f9f9
  margin 0px 9px

.payment-leads-card:hover
  content "Hola"
  border solid 5px #b09c6c
  border-radius 13px

.payment-leads-card-img
  width 147px

.payment-leads-method
  font-size 14px
  margin 23px 0px
  padding 0px 17px
  text-align center
  width 199px

.gray-separator
  border solid 1px #dedede
  width 85%
  margin 36px 0px 50px 0px

@media screen and (max-width: 975px)
  .content-row-mobile
    flex-direction column

  .content-column-mobile
    flex-direction row

  .width-100-mobile
    width 100%

  .vertical-center-mobile
    align-items center

  .show-mobile
    display block
    
  .content-static-mobile
    position static
    
  .margin-bottom-40px-mobile
    margin-bottom 40px

  .leads-payment-title
    font-size 20px
    margin-bottom 0px
    margin-top 35px

  .payment-leads-quantity,
    .payment-leads-select
      font-size 18px

  .payment-leads-total
    font-size 15px

  .payment-leads-select
    margin-left 20px
    margin-right 20px
    text-align center
    
  .margin-bottom-10px
    margin-bottom 10px

  .payment-leads-card
    width auto
    height auto
    margin 0px 0px
    padding 16px 13px

  .payment-leads-card-img
    max-width 100%

  .payment-leads-method
    margin 0px
    text-align left

  .separator
    margin 35px 0px