@import '../../assets/styles/vars'
@import '../../assets/styles/mixins'

.scheduling__title
  font-size 35px
  letter-spacing -0.3px
  color #1d1d1d
  text-align center
  margin-top 65px
  width 86%
  center-block()

.scheduling__subtitle
  rfont-size 25px 767px 18px
  text-align center
  letter-spacing -0.3px
  color #1d1d1d

.scheduling__subtitle--first
  margin-top 54px

.scheduling__hr
  width 83.25%
  max-width 889px

.scheduling__hr--day
  margin-top 76px

.scheduling__day
  margin-top 61px

  .flatpickr-calendar
    background $blackColor
    margin-top 44px
    top 0
    width 100%
    max-width 499px
    padding 38px 78px 55px 78px
    box-shadow none
    border-radius 0
    center-block()

    &::before,
    &::after
      content ''
      display none

  .flatpickr-month
    color white

    svg
      fill white
      height 25.7px
      width 25.5px

      &:hover
        fill $dustColor

  .flatpickr-next-month,
  .flatpickr-prev-month
    padding 0
    height 100%
    top 50%
    transform translateY(-50%)

  .flatpickr-current-month
    line-height 28px
    font-size 26px
    padding 0

    .cur-month
      color $dustColor
      font-weight normal

  .flatpickr-weekdays
    display none

  .flatpickr-days
    font-size 21px
    margin-top 46px

  .flatpickr-days,
  .flatpickr-rContainer,
  .dayContainer
    width 100%
    max-width initial

  .flatpickr-day
    color white
    border none !important
    border-radius 0
    width 49.1px
    height 49.1px
    flex-basis 50px
    max-width initial
    line-height 49.1px

    &:not(.selected):not(.disabled):hover
      background rgba($dustColor, 80%)

    &.selected
      background $dustColor

    &.disabled
      color #828282

    &.prevMonthDay,
    &.nextMonthDay
      visibility hidden
      height 0

.scheduling__hr--data
  margin-top 102px

.scheduling__data
  margin-top 65px
  width 85.31%
  max-width 677px
  center-block()

.scheduling__textarea
  rfont-size 18px 767px 15px
  letter-spacing 0.2px
  padding 1em unit(24/18, 'em')
  height 147px
  margin-top 45px
  width 100%

.scheduling__subtitle--reference
  margin-top 40px

.scheduling__file-wrapper
  background-color #f5f5f5
  padding 45px 25px
  text-align center
  position relative
  margin-top 28px

.scheduling__file
  opacity 0
  position absolute
  height 100%
  width 100%
  top 0
  left 0
  z-index 2
  cursor pointer

.scheduling__file-icon
  width 83px
  display block
  center-block()

.scheduling__file-legend
  rfont-size 13px 767px 12px
  padding 0 6px 4px 6px
  display inline-block
  margin-top 11px
  simple-border('bottom', 1px, $dustColor)

.scheduling__submit
  display block
  font-size 13px
  letter-spacing 0.6px
  padding 14px
  width 188px
  margin-bottom 58px
  margin-top 70px
  center-block()