@import '../../assets/styles/vars'
@import '../../assets/styles/mixins'

.scheduling__title
  font-size 35px
  letter-spacing -0.3px
  color #1d1d1d
  text-align center
  margin-top 65px
  width 86%
  center-block()

.scheduling__subtitle
  rfont-size 25px 767px 18px
  text-align center
  letter-spacing -0.3px
  color #1d1d1d

.scheduling__subtitle--first
  margin-top 54px

.scheduling__hr
  width 83.25%
  max-width 889px

.scheduling__hr--day
  margin-top 76px

.scheduling__day
  margin-top 61px

.scheduling__hr--data
  margin-top 102px

.scheduling__data
  margin-top 65px
  width 85.31%
  max-width 677px
  center-block()

.scheduling__textarea
  rfont-size 18px 767px 15px
  letter-spacing 0.2px
  padding 1em unit(24/18, 'em')
  height 147px
  margin-top 45px
  width 100%

.scheduling__subtitle--reference
  margin-top 40px

.scheduling__file-wrapper
  background-color #f5f5f5
  padding 45px 25px
  text-align center
  position relative
  margin-top 28px

.scheduling__file
  opacity 0
  position absolute
  height 100%
  width 100%
  top 0
  left 0
  z-index 2
  cursor pointer

.scheduling__file-icon
  width 83px
  display block
  center-block()

.scheduling__file-legend
  rfont-size 13px 767px 12px
  padding 0 6px 4px 6px
  display inline-block
  margin-top 11px
  simple-border('bottom', 1px, $dustColor)

.scheduling__submit
  display block
  font-size 13px
  letter-spacing 0.6px
  padding 14px
  width 188px
  margin-bottom 58px
  margin-top 70px
  center-block()