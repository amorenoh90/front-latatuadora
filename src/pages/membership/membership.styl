// Imports
@import '../../assets/styles/vars'

// Membership

.membership

  display flex
  flex-direction column

  margin 3rem 0

//  Header

.header

  &__title
    font-weight 400
    text-align center

//  Divider

.divider
  background-color $dustColor
  border none
  height 1px
  margin 2rem

// Type

.type
  font-size 1rem
  margin-bottom: 3em

  &__form
    display flex
    align-items center
    justify-content: center

    padding 1em

  &__item
    display flex
    align-items: center

    margin 0 1rem

  &__text
    text-align center
    color $blackColor

    &--decoration
      color $dustColor

// user-data
// address-data
.user-data,
.address-data

  &__item
    width 80%
    margin 2em auto

  [class^='input--']
    width 100%

// address-data
.address-data

  &__text
    @extend .type__text

    &--decoration
      @extend .type__text--decoration

  &__item
    &:nth-child(3)
      display flex

  &--number
    flex 1 1 auto
    margin 0 0.5em

// Cofepris
.cofepris
  @extends .type
  margin 0

  &__text--decoration
    text-transform uppercase

// Styles
.styles
  display flex

  .input__group--checkbox
    flex 1 0 50%

    display flex
    flex-direction column
    background-color red



.input

  &--checkbox
    appearance: none
    height 1em
    width 1em
    margin 0 1em

    border: 1px solid $borderColor

    &-tag
      appearance: none
      background-color $platinum

  &--label
    margin 1em 0
    display block
    color $loudBlack

  &--email, &--text, &--password, &--select
    height 2em
