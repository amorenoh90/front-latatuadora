@import '../../../assets/styles/vars'
@import '../../../assets/styles/base'

/**
* typography
**/

.heading
  color $blackColor
  font-size 2em
  font-weight 400
  letter-spacing -0.3px

  @media screen and (min-width 32em)
    font-size 2em

.paragraph
  color $loudBlack
  font-size 1em
  letter-spacing -0.2px

.separator
  background-color $borderColor
  border none
  height 1px
  width 320px


// Header styles
.header
  font-size 16px

  .heading
    margin 1.75em 0
    text-align center

.main
  font-size 16px
  display flex
  flex-direction column
  align-items center
  margin-top 3.5em

  .form
    display flex
    flex-direction: column
    align-items flex-end

  .form-group
    margin: 1.25em 0
    display flex
    flex-direction column

    @media screen and (min-width 32em)
      flex-direction row

  .reverse
    flex-direction row
    align-self flex-start
    justify-content center
    align-items: center

    @media screen and (min-width 32em)
      align-self center;

  .center
    align-self center;

    .paragraph
      margin 0 0.5em

  .input
    border thin solid $borderColor
    height 3em
    width 17em

    @media screen and (min-width 32em)
      width 21em

  .input--checkbox
    appearance none
    width 20px
    min-width: 20px
    height 20px
    border 1px solid $borderColor
    margin: 0 10px
    transition: 0.5s

  .input--checkbox:checked
    background-color $dustColor

    display: flex;
    align-items: center;
    justify-content: center;

    &:before
      content: url('src/assets/images/icons/radio.svg')

  .paragraph
    margin 0.75em

  .under
    color: #000;
    text-decoration none
    box-shadow: 0 1px 0  #000

  .button
    border none;
    border-radius: 2px
    background-color $dustColor
    color #FFF
    font-size 0.75em
    height 48px
    width 272px
    text-transform uppercase

    @media screen and (min-width 32em)
      width 336px

.footer-logo
  margin 6rem 0
