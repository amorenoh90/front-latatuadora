@import '../../assets/styles/base'


// Colors
$gold        = #b09c6c
$loudBlack   = #1d1c1c
$quiteBlack  = #262626
$silver = #e6e6e6



//! Reset ยก//
$reset
  box-sizing border-box
  margin 0
  padding 0

  font-size 16px
  font-size 62.5%
  font-weight 400
  font-family 'Lato', sans-serif

//! typography ยก//
$typography
  $heading
    font-size 2.5rem
    font-weight 400
    color : $loudBlack

  $subheading
    font-size 1.5rem
    color: $quiteBlack

  $paragraph
    font-size 1rem
    color: $quiteBlack

  $mark
    font-size inherit
    color: $gold


// Reset and Initialization

*,:after,:before
  @extends $reset
  @extends $typography $paragraph

.heading
  @extends $typography $heading

.subheading
  @extends $typography $subheading

.mark
  @extend $typography $mark

  &--silver
    @extend $typography $mark
    color: $silver
    text-decoration: underline;


// Input Behavior
.input
  width 250px
  height 35px
  border 1px solid $silver

  &--submit
    width 200px
    height 50px
    text-transform uppercase
    background-color $gold
    color: white
    border: none
    margin-top: 60px

  &--area
    width 270px
    height 150px
    border: 1px solid $silver

    @media only screen and (min-width 612px)
      width 500px
      height 150px


  &--file
    display: none;

  &--file-label
    background-color $gold
    color: white

    width 200px
    height 50px
    text-transform uppercase
    line-height: 50px
    font-size: 14px

  &--label:not(&--label-checbox)
    margin-bottom: 10px

    @media only screen and (min-width: 512px)
      margin-right: 30px

  @media only screen and (min-width: 512px)
    width 350px
    height 50px

  &__block
    display flex
    flex-direction column
    align-items center

    @media only screen and (min-width: 512px)
      align-items flex-end

  &__group
    display flex
    flex-direction column
    align-items flex-start
    margin: 12.5px 0

    &--row
      display: flex
      flex-direction row
      justify-content: center
      align-items: center
      flex-wrap: wrap

    @media only screen and (min-width: 512px)
      display: flex
      flex-direction row
      align-items center

  &--checkbox, &--radio
    appearance none
    width 20px
    min-width: 20px
    height 20px
    border 1px solid $silver
    margin: 0 10px
    transition: 0.5s

  &--radio:checked
    background-color $gold

    display: flex;
    align-items: center;
    justify-content: center;

    &:before
      content: url('src/assets/images/icons/radio.svg')

  &--checkbox-tag
    appearance none
    flex: 0 1 50%
    width 100px
    height 35px
    text-align center
    margin: 10px
    background-color $silver
    color: #FFF
    border-radius: 25px

    line-height: 35px

    &::before
      color: #FFF;
      content attr(data-tag)

    &:checked
      background-color $gold

// Divider behavior
$divider
  width 250px
  height 1px
  border: none
  border-bottom: 1px solid
  margin: 50px 0;

  @media only screen and (min-width: 512px)
    width 450px

.divider

  &--silver
    @extend $divider
    border-color $silver
  &--gold
    @extend $divider
    border-color $gold

    @media only screen and (min-width 912px)
      width 900px


// Styles

.membership
  margin 4rem 2rem
  display flex
  flex-direction column
  align-items center


  &__header, &__item
    text-align center

  &__kind, &__cofepris
    display: flex
    justify-content: center;
    align-items: center
    align-self: center

    margin: 35px 0;

  .input__group--row
    margin: 0 12.5px;

.address

  .input__block
    flex-direction: row
    flex-wrap: wrap;
    max-width 250px

    @media only screen and (min-width 512px)
      flex-direction: column;
      flex-wrap: wrap;
      max-width: unset

  .input__group


    &:nth-child(n)
      flex: 1 1 auto

    &:nth-child(2)
    &:nth-child(3)
      flex 0 1 calc(100%/2)
      width 80px

      @media only screen and (min-width 512px)
        width auto
        min-width: 175px;

    &:nth-child(2) .input
    &:nth-child(3) .input
      width: 80px

      @media only screen and (min-width 512px)
        width 175px

.styles

  .input__group-row
    margin 50px 0
    max-width 600px


.photo

  .input__block
    align-items: center
    margin: 30px 0

.terms

  .input__group--row
    flex-wrap: nowrap;

  .input__group
    @media only screen and (min-width 512px)
      align-self: flex-end;
