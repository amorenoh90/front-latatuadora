@import '../../assets/styles/vars'
@import '../../assets/styles/mixins'

.separator:after
  content ""
  height 10px
  width 10px
  background-color gold
  border-radius 50px

.content-row
  display flex
  flex 1
  flex-direction row
  
.content-column
  display flex
  flex-direction column
  
.content-wrap
  display flex
  flex-wrap wrap
  justify-content center
  
.wdt-53
  width 53%
  
.v-align
  display flex
  align-items center
  
.flash-opt__block
  margin-bottom 55px
  
.flash-opt
  font-family 'Lato'
  font-size 21px
  font-weight $regular
  margin 0px
  
.flash-opt__select
  color #b09c6c

.flash-opt__normal
  color #262626
  
.flash-opt__margin
  margin 0px 25px 0px 25px

.menu-page-content
  display flex
  width 100%
  align-items center
  flex-direction column
  
.mar-right-27
  margin-right 27px
  
.mar-ver-60-64
  margin 60px 0px 64px 0px
  
.mar-hor-18
  margin 18px 0px
  
.mar-bott-62
  margin-bottom 62px
  
.pdd-bott-68
  padding-bottom 68px
  
.bgc-262626
  background-color #262626
  
.profile__btn
  display flex
  flex-direction row
  justify-content center
  align-items center
  background-color #b09c6c
  cursor pointer
  border-radius 2px
  border none
  height 47.9px
  padding 0px 28px
  font-family 'Lato'
  font-weight $regular
  font-size 13px
  color #fff
  text-transform uppercase
  
.profile__title-black
  font-size 29px
  color #1d1c1c
  font-family 'Lato'
  font-weight $regular
  
.profile__title-white
  font-size 29px
  color #fff
  font-family 'Lato'
  font-weight $regular
  
.profile-background-flash
  background url("src/assets/images/backgrounds/gettattoo.jpg")
  width 100%
  display flex
  align-items center
  flex-direction column
  
.background-profile
  background url("src/assets/images/backgrounds/gettattoo.jpg")
  height 408px
  background-size cover
  background-repeat no-repeat
  background-position center center
  width 100%
  display flex
  align-items center
  flex-direction column
  justify-content center
  align-self flex-start
  
.profile__input
  width: 394px;
  height: 40.4px;
  border: solid 1px #d2d2d2;
  margin-left 29px
  margin-right 29px
  
.profile__p
  color #fff
  margin -30px 0px 55px 0px
  font-size 16px
  
.profile__p-span
  color #b19d69
  
.profile__tag
  width 111px
  height 34px
  background-color #bec3c6
  border-radius: 70px
  margin 10px 6px
  display flex
  align-items center
  justify-content center
  
.vertical-separator
  width 1px
  height 112px
  background-color #b09c6c
  margin 0px 61px

.menu-page-title
  color: #fff
  font-family 'Lato'
  font-weight $regular
  margin 68px 0px 50.6px 0px
  
.menu-page-description
  color: #b09c6c;
  
.menu-page-tattoo
  display flex
  flex-direction row
  flex-wrap wrap
  justify-content center

.new-flash
  display flex
  justify-content center
  align-items center
  width 222px
  height 353px
  background-color #1d1c1c
  margin 8px 8px 0px 8px

.new-tattoo--mobile
  display none
  
.new-tattoo--mobile__icon
    color: #fff
    font-size 20px
    margin-right 12px
    
.tooltip
  position relative
  display inline-block
  .tooltiptext
    display flex
    align-items center
    justify-content center
    visibility hidden
    width 189px
    height 40px
    background-color #a59366
    color #fff
    font-size 11px
    font-family 'Lato'
    font-weight $regular
    position absolute
    z-index 1
    bottom 36px
    left -141px
    &::after
      content ""
      position absolute
      top 100%
      left 78%
      margin-left -5px
      border-width 5px
      border-style solid
      border-color #a59366 transparent transparent transparent
  &:hover
    .tooltiptext
        visibility visible
  
@media screen and (max-width: 975px)
  .flex-row
    display flex
    flex 1
    flex-direction column
    
  .flash-opt__block
    display none

  .new-flash
    display none
    
  .menu-page-tattoo
    width: 100%
      
  .menu-page-tattoo
    flex-direction column
    
  .new-tattoo--mobile
    display flex
    flex-direction row
    justify-content center
    align-items center
    background-color #b09c6c
    cursor pointer
    margin 0px 32px 48px 32px
    border-radius 2px
    border none
    height 47.9px
    
  .new-tattoo--mobile__icon
    color: #fff
    font-size 20px
    margin-right 12px
    
  .new-tattoo--mobile__txt
    color #fff
    font-family 'Lato'
    font-size 13px
    font-weight $regular
    text-transform uppercase