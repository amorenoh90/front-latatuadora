.tooltip
  position relative
  display inline-block
  .tooltiptext
    display flex
    align-items center
    justify-content center
    visibility hidden
    width 189px
    height 40px
    background-color #a59366
    color #fff
    font-size 11px
    font-family 'Lato'
    font-weight $regular
    position absolute
    z-index 1
    bottom 36px
    left -141px
    &::after
      content ""
      position absolute
      top 100%
      left 78%
      margin-left -5px
      border-width 5px
      border-style solid
      border-color #a59366 transparent transparent transparent
  &:hover
    .tooltiptext
        visibility visible
        
