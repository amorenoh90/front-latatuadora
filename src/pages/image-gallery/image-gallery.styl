@import '../../assets/styles/vars'
@import '../../assets/styles/mixins'
@import '../../assets/styles/base'

.flex-row
  display flex
  flex 1
  flex-direction row
  
.hide-desktop
  display none

.separator
  width 85%
  margin-bottom 123px

.menu-page-content
  display flex
  width 100%
  align-items center
  flex-direction column
  margin-bottom 159px
  min-height 700px

.menu-page-title
  color: #1d1c1c
  font-family 'Lato'
  font-weight $regular
  margin 68px 0px 50.6px 0px
  
.menu-page-description
  color: #b09c6c
  
.menu-page-tattoo
  display flex
  flex-direction row
  flex-wrap wrap
  justify-content center
  
.anchor-return
  position absolute
  top -80px
  left 0px
  
.return
  display flex
  flex-direction row
  align-items center
  margin-bottom 46px
  
.circle-return
  align-items center
  background-color #b09c6c
  border-radius 50px
  display flex
  justify-content center
  height 30px
  width 30px
  
.left-arrow
  width 8px
  
.txt-return
  color #595959
  font-family 'Lato'
  font-size 13px
  font-weight $regular
  text-transform uppercase
  margin 0px
  margin-left 10px

.new-photo
  display flex
  flex-direction column
  justify-content center
  align-items center
  width 241px
  height 195px
  background-color #1d1c1c
  margin 8px
  position relative

.new-tattoo--mobile
  display none
  
.new-tattoo-artist
  display flex
  flex-direction column
  justify-content center
  align-items center
  background-color #1d1c1c
  width 234px
  height 241px
  margin 8px
  
.new-photo__plus
  width 89px
  
.new-photo__txt
  color #9b9b9b
  font-family 'Lato'
  font-size 14px
  font-weight $regular
  
.new-photo__txt-gold
  color #b09c6c
  
.new-tattoo-artist--highlight
  color #b09c6c
  
.mar-right-10
  margin-right 10px
  
@media screen and (max-width: 975px)
  .flex-row
    display flex
    flex 1
    flex-direction column
    
  .hide-mobile
    display none
    
  .show-mobile
    display block
    
  .menu-page-content
    margin-bottom 63px
    
  .separator
    margin 35px 0px
    
  .return
    justify-content center
    
  .new-tattoo-artist--mobile
    display flex
    flex-direction row
    justify-content center
    align-items center
    background-color #b09c6c
    border-radius 2px
    border none
    height 48px
    text-transform uppercase
    color #fff
    font-family 'Lato'
    font-size 13px
    font-weight $regular
    margin-bottom 27px
    padding 0px 17px
    
  .menu-page-tattoo
    align-items center
    flex-direction column
    width: 100%
    
  .menu-page-title
    text-align center
    margin-bottom 0px
    margin-top 35px
    
  .new-tattoo--mobile
    display flex
    flex-direction row
    justify-content center
    align-items center
    background-color #b09c6c
    cursor pointer
    margin 0px 32px 48px 32px
    border-radius 2px
    border none
    height 47.9px
    
  .new-tattoo--mobile__icon
    color: #fff
    font-size 20px
    margin-right 12px
    
  .new-tattoo--mobile__txt
    color #fff
    font-family 'Lato'
    font-size 13px
    font-weight $regular
    text-transform uppercase
