@import '../../../assets/styles/vars'
@import '../../../assets/styles/mixins'

.quotation-instructions__input-file-container
  display block
  center-block()
  height 291px
  margin-top 70px
  width 345px

  &.no-file
    background-color $dustColor
    background-image none

    .quotation-instructions__input-file
      background rgba($dustColor, 60%)

.quotation-instructions__main-icon
  margin-bottom 38.6px
  margin-top 63px
  width 47.2px

.quotation-instructions__input-file
  background rgba(black, 60%)
  color white
  height 100%
  width 100%
  position relative
  letter-spacing 0.1px
  font-size 17px

  .site-button
    padding 14px 20px
    text-transform none
    margin-top 33px

  input
    cursor pointer
    display block
    height 100%
    width 100%
    opacity 0
    position absolute
    top 0
    left 0

.quotation-instructions__input-file-span
  display block
  margin-top 12px

.quotation-instructions__input-note
  font-size 16px
  letter-spacing 0.1px
  display block
  color white
  text-align left

.quotation-instructions__file-note
  margin-top 19px
  center-block()
  width 345px