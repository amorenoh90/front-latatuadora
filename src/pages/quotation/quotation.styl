@import '../../assets/styles/vars'
@import '../../assets/styles/mixins'

.quotation-container
  position relative

  &.step-1
    background-image url('/src/assets/images/backgrounds/quotation-step-1.jpg')

.quotation-progress
  background #cacaca
  height 12px
  position absolute
  top 0
  left 0
  width 100%

.quotation-progress__inner
  background $dustColor
  height 100%
  transition width 0.3s
  width 0

.quotation-content
  padding-top 74px
  padding-bottom 104px
  text-align center

.quotation-title
  font-family 'Lato'
  font-weight $normal
  font-size 40px
  letter-spacing -0.3px
  color white
  margin 0

.quotation-instructions
  color white
  margin 0
  font-weight $normal
  font-size 24px

.quotation-instructions--step-1-main
  margin-top 10px

.quotation-instructions--step-1-sub
  width 280px
  center-block()

.quotation-instructions--step-1-height
  margin-bottom 65px
  margin-top 70px

.quotation-instructions--step-1-width
  margin-bottom 64px
  margin-top 48px

.quotation-step-1-icon
  width 44px
  margin-top 51px
  margin-bottom 36px

.quotation-footer
  text-align center
  clear both
  width 864px
  center-block()
  padding-bottom 61px
  overflow auto

  .site-button
    font-size 13px
    padding 16px 30px
    letter-spacing: 0.5px

.quotation-next
  float right

.quotation-back
  float left