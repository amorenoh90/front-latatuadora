@import '../../../assets/styles/vars'
@import '../../../assets/styles/mixins'

.quotation-step-3__icon
  display inline-block
  width 56px
  margin-bottom 61px
  margin-top 61px

.quotation-instructions--step-3-main
  width 379px
  center-block()

.quotation-step-3__content
  display flex
  align-items flex-end
  justify-content space-between
  margin-top 111px
  max-width 750px
  width 88%
  center-block()

.quotation-step-3__parts
  margin-bottom 54px
  flex-basis 194px

.quotation-step-3__parts-list
  background #e9e9e9
  height 371px

.quotation-step-3__parts-item
  background transparent
  color $blackColor
  cursor pointer
  font-size 16px
  letter-spacing -0.3px
  line-height 50px
  padding 0 22px
  text-align left

  &:hover, &.active
    background $dustColor
    color white

.quotation-step-3__types
  display table

.quotation-step-3__types-titles,
.quotation-step-3__types-images
  display table-row

.quotation-step-3__type-title-container,
.quotation-step-3__type
  display table-cell

.quotation-step-3__type-title
  cursor pointer
  padding 0 8px 4px 8px
  margin-bottom 72px
  simple-border('bottom', 1px, #e5e5e5)
  display inline-block
  width auto

  &:hover, &.active
    color $dustColor
    simple-border('bottom', 1px, $dustColor)

.quotation-step-3__type
  padding 0 38px

  img
    width 154px

@media screen and (max-width 767px)
  .quotation-step-3__icon
    margin-top 37px
    margin-bottom 36px

  .quotation-instructions--step-3-main
    font-size 18px
    width 242px

  .quotation-step-3__content
    flex-wrap wrap
    margin-top 36px

  .quotation-step-3__types,
  .quotation-step-3__types-titles,
  .quotation-step-3__types-images,
  .quotation-step-3__type-title-container,
  .quotation-step-3__type
    display block

  .quotation-step-3__types,
  .quotation-step-3__parts
    flex-basis 100%

  .quotation-step-3__types
    margin-top 42px

  .quotation-step-3__type-title
    margin-bottom 36px

    &:not(.active)
      display none

  .quotation-step-3__type
    padding 0

    img
      display none
      width 140px

      &.active
        display initial
