@import '../../assets/styles/vars'
@import '../../assets/styles/base'

.how-background
  background url("src/assets/images/backgrounds/gettattoo.jpg")
  background-repeat no-repeat
  background-size cover
  
.how-separator
  width 85%
  margin 29px 0px 66px 0px
  
.how-title-steps
  font-family 'BebasNeue'
  font-size 31px
  text-align center
  line-height 26px
  height 57px
  
.how-square
  background-color #000
  border 3px solid $dustColor
  height 127px
  width 127px
  
.how-square-image
  height 40px
  width 40px
  
.margin-bottom-14px
  margin 0px 0px 14px 0px
  
.margin-horizontal-30px
  margin 0px 30px
  
.margin-vertical-24px-0px
  margin 24px 0px 0px 0px
  
.padding-vertical-69px-101px
  padding 69px 0px 101px 0px
  
.margin-vertical-98px
  margin 98px 0px 98px 0px
  
.width-190px
  width 190px

@media screen and (max-width 975px)    
  .how-width-127px-mobile
    width 127px

  .margin-vertical-40px-60px-mobile
    margin 40px 0px 60px 0px
    
  .margin-vertical-30px-26px-mobile
    margin 30px 0px 26px 0px
    
  .margin-horizontal-12px-mobile
    margin 0px 12px 22px 12px
    
  .margin-bottom-44px-mobile
    margin 0px 0px 44px 0px
    
  .margin-top-17px-mobile
    margin 17px 0px 0px 0px
    
  .padding-vertical-54px-32px-mobile
    padding 54px 0px 32px 0px