@import '../../../assets/styles/vars'
@import '../../../assets/styles/mixins'

.user__quotations-title
  rfont-size 35px 767px 28px
  letter-spacing -0.3px
  margin-top 60px
  text-align center

.user__quotations-subtitle
  letter-spacing 0.1px
  rfont-size 22px 767px 16px
  margin-top 30px
  display block
  text-align center

.user__quotations-hr
  width 76.25%
  max-width 903px
  margin-top 64px

.user__quotations-wrapper
  margin-top 84px
  padding-bottom 79.5px

.user__quotations-grid
  width 860px
  center-block()

@media screen and (max-width: 855px)
  .user__quotations-wrapper
    margin-top 60px

  .user__quotations-grid
    width 690px

    .quotations-grid__element
      margin 12.5px

      .quotations-grid__element-info
        padding 23px 48px 32px 48px

      .site-button
        width 164px
        padding 10px
        font-size 13px

    .quotations-grid__element-logo
      height 34px

    .quotations-grid__element-info-bottom
      margin-top 16px
      padding 5px 26px 0 26px

    .quotations-grid__element-characteristic
      font-size 15px
      margin-top 15.4px

      img
        height 21px
        margin-right 8.5px

@media screen and (max-width: 767px)
  .user__quotations-title
    margin-top 43px

  .user__quotations-subtitle
    margin-top 15px

  .user__quotations-hr
    margin-top 38px

@media screen and (max-width: 714px)
  .user__quotations-wrapper
    margin-top 44.5px

  .user__quotations-grid
    width 320px

    .quotations-grid__element
      margin 5.6px 0