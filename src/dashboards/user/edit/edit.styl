@import '../../../assets/styles/vars'
@import '../../../assets/styles/mixins'

.user__edit
  padding-top 59px
  padding-bottom 141px
  width 81.56%
  max-width 951px
  text-align center
  center-block()

  .input-wrapper
    max-width 396.5px
    center-block()

  .site-input
    font-size 16px
    letter-spacing -0.2px
    padding 14px 12px
    flex-grow 1
    max-width calc(100% - 52px)

.user__edit-photo-wrapper
  margin-top 49px
  width 146px
  height 146px
  position relative
  center-block()

  input
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    opacity 0
    cursor pointer

.user__edit-photo-label
  margin-top 31px
  display inline-block
  padding 0 0.5px 1px 0.5px
  font-size 13px
  simple-border('bottom', 1px, $dustColor)

.user__edit-data
  padding-top 20px

  .input-wrapper
    margin-top 22px

    &:nth-child(1) img
      width 30px

    &:nth-child(2) img
      width 26.7px
      margin-left 1.75px

    &:nth-child(3) img
      width 25px
      margin-left 2.5px

    &:nth-child(4) img
      width 16.5px
      margin-left 7.25px

.user__edit-tattooed-span
  display inline-block
  margin-top 38px
  font-size 18px
  color #1d1c1c

.user__edit-tattooed
  margin-top 28px

.user__edit-button
  margin-top 46px
  font-size 11px
  letter-spacing 0.5px
  padding 11.5px
  width 187px

.user__edit-hr
  margin-top 83px
  width 93.48%

.user__edit-password
  margin-top 44px

  .site-title
    padding-bottom 12px

  .input-wrapper
    margin-top 26px

    img
      width 16.5px
      margin-left 10px