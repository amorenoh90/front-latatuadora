artist
  height 160px
  width 160px

.artist
  height 100%
  width 100%


  .title
  .text
  .caption
    color: #FFF

  .title
    font-size 1.125rem

  .text
    font-size 1rem

  .caption
    font-size 0.875rem

  &__card
    width 160px
    height 160px
    margin 0
    padding 0
    position: relative
    transition: all 0.5s

  &__card--background
  &__card--back
  &__card--front
    height 100%
    width 100%

  &__card--front
    position: relative
    display: flex;
    align-items: center;
    justify-content: center;

  &__card--back
    background-color #262626;
    backface-visibility hidden
    transform rotateY(180deg)
    position: absolute;
    top: 0

    padding 1rem

    display: flex;
    flex-direction: column;
    justify-content: center
    align-items: flex-start;

  &__card--background
    top: 0
    left: 0
    position: absolute

  &__card--logo
  &__card--background
    z-index: -1

  &__card--name
    padding 1rem
    color: #FFF
    font-family: 'BebasNeue';
    font-size: 2.5rem;
    text-align: center;
    text-transform: uppercase;

  &__styles
    margin: 0.5rem 0
    display: flex;
    flex-wrap: wrap;

  &__style
    background-color #e5e5e5
    border-radius: 25px
    font-size 0.7rem
    padding 0.4rem 0.8rem
    margin 0.25rem 0.25rem

  &__star
    color: #f7c42a

  &__like
    color #FFF
    align-self: flex-end;


.artist:hover
  .artist__card
    transform: rotateY(180deg);

  .artist__card--back
    backface-visibility visible


.artist
.artist__card
  perspective: 1000px
  transform-style: preserve-3d;


@media screen and (min-width 32rem)
  artist
  .artist__card
    width 250px
    height 250px
