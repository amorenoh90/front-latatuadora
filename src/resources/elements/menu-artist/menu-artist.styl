@import '../../../assets/styles/vars'
@import '../../../assets/styles/mixins'

.menu-artist
  display flex
  flex-basis 20%
  background-color #e9e9e9
  height 100%
  padding-top 50px
  
.menu-artist__mobile
  display none
  
.menu-artist__content-mobile
  display none

.menu-artist__list
  list-style none
  padding-left 0px

.menu-artist__img
  width 16px
  margin-right 8px

.menu-artist__anchor
  display flex
  align-items center
  padding 10px 0px 10px 18px
  margin 40px 0px 40px 0px
  color #020202

.menu-artist__anchor:visited
  color #020202

.menu-artist__anchor:focus
  background-color: #b09c6c
  color #fff
  
.menu-artist__anchor:hover
  background-color: #b09c6c
  color #fff

.menu-artist__txt
  font-family 'Lato'
  font-weight: $regular
  font-size 14px
  margin 0px
  color #1d1c1c
  
@media screen and (max-width: 975px)
  .menu-artist
    display none
    
  .menu-artist__mobile
    display block
    position fixed
    left 0px
    right 0px
    background-color #e9e9e9
    height 39px
    z-index 1
    
  .menu-artist__content-mobile
    display block
    background-color #e9e9e9
    margin-top -1px
    padding-bottom 80px
        
  .menu-artist__list-mobile
    list-style none
    padding-left 0px
    
  .menu-artist__anchor-mobile
    display flex
    align-items center
    padding 13px 90px 13px 90px
    margin 40px auto 40px auto
    width 315px
    
  .menu-artist__anchor-mobile:visited
    color black

  .menu-artist__anchor-mobile:focus
    background-color: #b09c6c
    color #fff
    
  .menu-artist__anchor-mobile:hover
    background-color: #b09c6c
    color #fff
    
  .menu-artist__img-mobile
    width 16px
    margin-right 11px
    
  .menu-artist__txt-mobile
    font-family 'Lato'
    font-weight: $regular
    font-size 14px
    margin 0px
    color #1d1c1c
    
  .btn-hamburguer
    margin 13px 0px 0px 15px
    
  .btn-hamburguer__line
    background-color #1d1c1c
    border-radius 2px
    height 3px
    width 18.1px    
    
  .btn-hamburguer__line--space    
    margin 2px 0px