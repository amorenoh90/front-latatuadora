@import '../../../assets/styles/vars'
@import '../../../assets/styles/mixins'

.site-footer
  background $blackColor
  color white
  padding remify(77) 0
  font-size 13px

  a,
  .site-footer__newsletter-title
    color $dustColor

  .site-button
    font-size 10px

.site-footer__inner
  justify-content space-between
  flex-wrap wrap
  display flex
  width 90%
  max-width 871px
  center-block()

.site-footer__left
  flex-basis 256px

.site-footer__nav-item
  display block
  line-height 1.32

.site-footer__newsletter
  margin-top remify(31)

.site-footer__newsletter-div
  margin-top remify(10)
  display flex
  justify-content space-between

  .input-wrapper
    flex-basis 168px

  .button-wrapper
    flex-basis 80px

  .site-button
    padding 1.3em 2.1em
    max-width 100%

.site-footer__newsletter-input
  font-family 'Lato'
  color $dustColor
  simple-border('all', 1px, rgba(#979797, 0.45))
  background transparent
  width 100%
  padding 0.78em 1.2em

  &::placeholder
    color #4a4a4a

.site-footer__middle
  flex-basis 270px
  text-align center

.site-footer__logo
  img
    width remify(132)

.site-footer__terms-privacy
  margin-top 24px

.site-footer__terms-privacy-item
  display inline-block
  vertical-align middle

  &:not(:first-child)
    margin-left 4px

    &::before
      content '|'
      display inline-block
      vertical-align top
      margin-right 8px

.site-footer__right
  flex-basis 135px
  margin-left 60px

.site-footer__signup
  &::after
    content ' '
    display block
    background $dustColor
    height 1px
    width 71px
    margin-top remify(24)

  .site-button
    color white
    margin-top 9px
    padding 0.88em 3em

.site-footer__signup-title
  line-height 1.3
  display block

.site-footer__social
  margin-top remify(16)
  width 82px
  text-align center

.site-footer__social-title
  display block
  color $dustColor

.site-footer__social-items
  margin-top 12.7px
  display flex
  justify-content space-between

.site-footer__social-item
  font-family: FontAwesome;
  font-size 18.5px
  transition color 0.2s

  &:hover
    color lightness($dustColor, 40%)

@media screen and (max-width: 850px)
  .site-footer
    padding-top 30px
    padding-bottom 46px

  .site-footer__inner
    width 82.5%
    position relative
    padding-bottom 50px

  .site-footer__middle
    flex-basis 100%

  .site-footer__left,
  .site-footer__right
    flex-basis 48%

  .site-footer__middle,
  .site-footer__newsletter
    order -1

  .site-footer__left
    display flex
    flex-wrap wrap
    justify-content center
    text-align center

  .site-footer__newsletter
    margin-top 36px

  .site-footer__newsletter-title
    display block

  .site-footer__newsletter-div
    margin-top 10px

    .input-wrapper
      flex-basis 168px

  .site-footer__nav::before
    content ' '
    display block
    height 1px
    width 100%
    background $dustColor
    margin 28px auto 19px auto
    width 98px

  .site-footer__logo img
    width 105px

  .site-footer__terms-privacy
    position absolute
    bottom 0
    font-size 11px
    left 0
    width 100%
    text-align center

  .site-footer__right
    margin-left 0

  .site-footer__signup
    margin-top 47px
    text-align center

    &::after
      content ''
      display none

  .site-footer__social
    margin-top 25px

    &::before
      background $dustColor
      margin-bottom 24px
      content ' '
      display block
      center-block()
      height 1px
      width 50px

  .site-footer__social
    center-block()

  .site-footer__social-item
    font-size 20px

@media screen and (max-width: 570px)
  .site-footer__inner
    max-width initial
    width 264px

  .site-footer__left,
  .site-footer__right
    flex-basis 100%

  .site-footer__signup
    text-align left
    margin-top 45px
    display flex
    justify-content space-between
    align-items flex-start
    flex-wrap wrap

    .site-button
      margin-top 0
      padding 0.95em 3em

  .site-footer__signup-title
    flex-basis 130px

  .site-footer__social
    margin-top 39px

    &::before
      margin-bottom 16px
