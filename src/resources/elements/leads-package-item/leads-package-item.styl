@import '../../../assets/styles/vars'
@import '../../../assets/styles/mixins'

.leads
  height 308px
  width 219px
  background-color #b09c6c
  margin 8px
  
.estrella
  background url("src/assets/images/icons/lead-star.png")
  
.content-row
  display flex
  flex-direction row
  
.hor-align
  display flex
  align-items center
  justify-content center

.leads__bg
  background url('src/assets/images/backgrounds/gettattoo.jpg')
  background-repeat no-repeat
  background-size cover
  height 208px

.leads__bg--align
  display flex
  flex-direction column
  align-items center
  justify-content center
  
.leads__star
  display flex
  align-items center
  justify-content center
  
.leads__quantity
  font-size 30px
  margin 10px 0px 0px 0px
  position absolute

.leads__txt-leads
  font-size 20px
  margin 12px 0px 0px 0px
  
.leads__price
  font-size 15px
  margin 15px 0px
  text-align center
  
.possible-client__user
  font-size 13px
  
.possible-client__desc
  font-size 12px
  
.possible-client__icon
  width 18px
  
.possible-client__btn
  color #fff
  background-color #b09c6c
  border none
  border-radius 2px
  font-family 'Lato'
  font-size 13px
  font-weight $regular
  text-transform uppercase
  
.black
  background-color black
  
.buy-item
  height 34px
  width 112px
  
.buy-leads
  height 34px
  width 161px
  margin-top 62px
  
.base-txt
  color #fff
  font-family 'Lato'
  font-weight $regular
  
.possible-client__img
  width 30px
  
.separator-gold
  border solid 1px #b09c6c
  margin 10px 21px
  
.mar-ver-8-16
  margin 8px 0px 16px 0px
  
.mar-top-24
  margin-top 24px
  
.mar-right-5
   margin-right 5px
  
@media screen and (max-width: 975px)
  .leads
    margin 6px 0px
    width 154px

  .possible-client
    margin 8px 0px
    width 100%
  