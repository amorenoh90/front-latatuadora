@import '../../../assets/styles/vars'
@import '../../../assets/styles/mixins'

.tattoo-modal
  position relative

.tattoo-modal__header
  text-align right
  padding-right 45px

.tattoo-modal__prev,
.tattoo-modal__next,
.tattoo-modal__close
  cursor pointer

.tattoo-modal__close
  height 23px
  width 25.5px

.tattoo-modal__prev,
.tattoo-modal__next
  position absolute
  top 50%
  height 36px
  width 18px
  transform translateY(-50%)

.tattoo-modal__prev
  left 0

.tattoo-modal__next
  right 0

.tattoo-modal
  .tattoos-grid__element
    margin 26px 45px 0 45px
    max-width 865px
    width 85vw
    min-width 320px

  .tattoos-grid__element-thumbnail-img
    height auto
    max-height 423px
    object-fit cover
    width 100%

  .tattoos-grid__element-info-wrapper
    display flex
    flex-wrap wrap
    justify-content space-between
    padding 33px 36px 45px 36px

  .tattoos-grid__element-info-left
    flex-basis 600px

  .tattoos-grid__element-info-right
    flex-basis 144px
    text-align right

  .tattoos-grid__element-buttons
    text-align center

  .tattoos-grid__element-info-top
    justify-content left

  .tattoos-grid__element-tags
    text-align left

  .tattoos-grid__element-comments
    flex-basis 100%