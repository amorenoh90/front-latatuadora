.style

  &__layer
    z-index 1
    height 100%
    width 100%
    top 0
    position absolute
    background rgba(black, 0.2)

  &
    width 160px
    height 160px
    object-fit cover
    object-position center
    background-position center
    background-size cover
    position relative

  &__image
    max-width 100%
    max-height 100%
    width 100%
    height 100%

  &__description
    z-index 2
    transform translate3d(-50%, -50%, 0);
    position absolute
    top 50%
    left 50%

    font-family 'BebasNeue'
    font-size 2.5rem
    text-align center
    text-transform uppercase
    color #FFF

  @media screen and (min-width 48rem)

    &
      width 250px
      height 250px

  @media screen and (min-width 64rem)

    &
      width 250px
      height 250px
