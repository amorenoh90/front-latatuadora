@import '../../../assets/styles/vars'
@import '../../../assets/styles/mixins'

.artist-tattoo
  position relative
  display flex
  flex-direction column
  align-items center
  background-color #f5f5f5
  width 234px
  height 241px
  margin 8px
  
.artist-tattoo__img
  position absolute
  top 44px
  left 25px
  border solid 3px #f5f5f5
  border-radius 50px
  width 52px
  background-color #f5f5f5  

.artist-tattoo__background
  background url("src/assets/images/backgrounds/tatuate.png")
  height 72px
  width 100%
  
.artist-tattoo__separator
  border solid 1px #d0d0d0
  width 90%
  margin 15px 0px
  
.artist-tattoo__name
  color #b09c6c
  font-family 'Lato'
  font-size 15px
  font-weight $regular
  margin 39px 0px 0px 0px
  
.artist-tattoo__last-name
  color #000000
  
.artist-tattoo__description
  color #4a4a4a
  font-family 'Lato'
  font-size 12px
  font-weight $regular
  padding 0px 16px
  margin 0px
  
.artist-tattoo__opts
  display flex
  flex-direction row
  position absolute
  bottom 12px
  right 12px
  
.artist-tattoo__icon
  color #b09c6c
  font-size 13px
  
.mg-lf
  margin-left 5px