@import '../../../assets/styles/base'

.eval-item__bg
  background url("src/assets/images/backgrounds/evaluation-item.png")
  background-repeat no-repeat
  background-size cover
  width 526px
  padding 60px 41px
  
.eval-item__img
  height 51px
  width 51px
  
.txt-white
  color #fff

.txt-gold
  color #b09c6c
  
.eval-item__name
  font-size 16px
  margin 0px 0px 5px 0px
  
.eval-item__date
  font-size 10px
  margin 0px
  
.eval-item__desc
  font-size 12px
  text-align justify
  margin 0px
  
.eval-item__hr
  color #b09c6c
  border solid 1px
  margin 20px 0px
  
.mar-ver-2px
  margin 2px 0px
  
.mar-lft-67px
  margin-left 67px

.mar-rgt-16px
  margin-right 16px
  
.wdt-100
  width 100%
  
@media screen and (max-width: 975px)
  .eval-item__bg
    padding 29px 36px
    width 100%
    
  .mar-lft-67px
    margin-left 0px