.cover
  background-position center
  background-size cover

.simple-parallax
  background-attachment fixed

  @media screen and (max-width: 767px)
    background-attachment initial

.vertical-center
  align-items center
  display flex
  justify-content center

.circle
  border-radius 50%

.flip-card
  position relative
  perspective 800
  transform-style preserve-3d

  &.active
    .flip-card__back
      transform rotateY(0deg)

    .flip-card__front
      transform rotateY(180deg)

.flip-card__inner
  position absolute
  width 100%
  height 100%

.flip-card__back,
.flip-card__front
  position absolute
  height 100%
  width 100%
  backface-visibility hidden
  transition all 0.6s
  transform-style preserve-3d
  top 0
  left 0
  z-index 2

.flip-card__front
  transform rotateY(0deg)

.flip-card__back
  transform rotateY(-180deg)

.like-button
  background none
  border none
  outline none

  &::before
    font-family 'FontAwesome'

.underline
  text-decoration underline

.divider
  margin 3rem 0
  display flex
  align-items center
  justify-content center
  height 1px
  width 100%
  color $borderColor
  font-size 1.2em

  @media screen and (min-width 32em)
    width 50%

  &__item
    &:nth-child(even)
      text-align center
      flex 1 1 10%

    &:nth-child(odd)
      flex 2 1 40%
      height 1px
      border-bottom 1px solid $borderColor