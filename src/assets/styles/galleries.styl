@media screen and (min-width: 32rem)

  .gallery-title
    rfont-size 35px 767px 29px
    line-height 1.28
    text-align center
    letter-spacing -0.3px
    margin-top 49px
    font-weight normal
    margin-bottom 0
    color $blackColor
    width 90%
    center-block()

.gallery-subtitle
  rfont-size 22px 767px 21.5px
  text-align center
  display block
  color $blackColor
  margin-top 16px

.gallery-subtitle,
.gallery-title
  &.hide-desktop,
  .hide-desktop
    display none

.gallery-filters-toggle
  width: 144px
  margin: 35px auto
  display none 
  font-size 15px
  letter-spacing -0.2px
  border-radius 100px
  text-transform none
  center-block()
  padding 7px 26px 9px 26px
  line-height 1


  img, span
    display inline-block
    vertical-align middle

  img
    margin-left 16px

.gallery-filters
  text-align center
  margin-top 62px
  margin-bottom 40px

.gallery-filter-wrapper
  background white
  position relative
  color #1d1d1d
  display inline-block
  text-align left
  overflow hidden
  cursor pointer

  &.active
    color $dustColor

  &:not(.no-arrow)::after
    position absolute
    top 50%
    right 0
    width 0
    height 0
    content ' '
    border-left 3.3px solid transparent
    border-right 3.3px solid transparent
    border-top 4.5px solid $dustColor
    z-index 0
    transform translateY(-50%)

  &:not(:first-child)
    margin-left 47px

  &.styles-filter
    width 85px

  &.elements-filter
    width 120px

  &.parts-filter
    width 185px

.gallery-filter
  border none
  background transparent
  rfont-size 22px 767px 19px
  appearance none
  position relative
  z-index 1
  width 100%
  text-overflow ellipsis
  white-space nowrap
  overflow hidden
  color inherit
  padding-right 17px
  padding-left 9px

  option:not(:first-child)
    font-size 18px

.tattoos-grid-container
  padding-bottom 81px

.tattoos-grid
  center-block()
  width 855px

.tattoos-grid-loader
  margin-top 75px
  margin-bottom 75px

.tattoos-grid-icon
  width 55px
  margin-top 50px

.tattoos-grid-loader,
.tattoos-grid-icon
  center-block()
  display block

@media screen and (max-width: 855px)
  .tattoos-grid-container
    padding-top 30px

@media screen and (max-width: 767px)
  .gallery-title
    margin-top 43px

  .gallery-subtitle
    margin-top 12px

  .gallery-subtitle,
  .gallery-title
    &.hide-mobile,
    .hide-mobile
      display none

    &.hide-desktop,
    .hide-desktop
      display block

@media screen and (max-width: 633px)
  .gallery-filters-toggle
    display block

  .gallery-filters
    transition margin-top 0.2s, margin-bottom 0.2s
    display flex
    flex-wrap wrap
    align-items center
    justify-content space-around

    &.show
      margin-top 10px
      margin-bottom 40px

      .gallery-filter-wrapper
        max-height 21px

    &.hide
      margin-top 0
      margin-bottom 0

      .gallery-filter-wrapper
        max-height 0
        margin-top 0

  .gallery-filter-wrapper
    display block
    flex-basis 36%
    center-block()
    transition max-height 0.2s, margin-top 0.2s
    margin-top 30px

    &:not(:first-child)
      margin-left auto

    &.all-filter
      text-align center

  .gallery-filter
    padding-left 0

  .tattoos-grid-container
    padding-top 20px
    padding-bottom 50px

@media screen and (max-width: 500px)
  .tattoos-grid-icon
    margin-top 15px

@media screen and (min-width: 512px)
  .gallery-filters-toggle.site-button
    display: none